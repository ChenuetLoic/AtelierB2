{% extends 'layout_admin.html.twig' %}
    {% block stylesheets %}
        {{ encore_entry_link_tags('admin') }}
    {% endblock %}
{% block title %}Administration|A propos{% endblock %}

{% block body %}
    <h1 class="title text-center">Administration a propos</h1>
<div class="container">
    <a class="btn btn-success mb-2" href="{{ path('about_new') }}">Ajouter un nouveau texte</a>
    <table class="table text-dark text-center">
        <thead class="bg-primary">
            <tr>
                <th>Images</th>
                <th>Description</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for about in abouts %}
            <tr>
                <td> <img class="idImage" src="{{ asset('build/images/' ~ about.picture) }}"
                          alt="{{ about.picture }}" title="{{ about.picture }}"></td>
                <td>{{ about.description }}</td>
                <td>
                    <a class="btn btn-secondary btn mt-2"
                       href="{{ path('about_edit', {'id': about.id}) }}">Modifier</a>
                    {{ include('admin/about/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
    <div class="text-center">
        <a class="btn btn-primary btn mb-4" href="{{ path('admin_index') }}">Retour</a>
    </div>
{% endblock %}
