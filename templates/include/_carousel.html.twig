<section id="carousel-images" class="carousel slide pb-0" data-ride="carousel">
    <div class="carousel-inner">
        {% set picture = "" %}
        {% for picture in pictures %}
            <div class="carousel-item  {% if loop.index0 == 0 %} active {% endif %}">
                <div class="carousel-caption">
                    <h1 class="text-light pb-5">Architectes d'intérieure Adeline Bellot</h1>
                </div>
                <img class="imageCarousel vh-100 w-100" src="{{ asset('uploads/path/'~picture.path) }}"
                     alt="{{ picture.path }}">
            </div>
        {% endfor %}
    </div>
    <a class="carousel-control-prev" href="#carousel-images" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Précèdent</span>
    </a>
    <a class="carousel-control-next" href="#carousel-images" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Suivant</span>
    </a>
</section>
