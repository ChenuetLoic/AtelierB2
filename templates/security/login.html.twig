{% extends 'layout.html.twig' %}{% block carousel %}{% endblock %}
{% block title %}Connectez-Vous!{% endblock %}
{% block body %}
    <div class="container col-12 col-md-4">
        <div class="row justify-content-center">
            <form method="post">
                <h1 class="h2 mb-3 font-weight-normal text-center mt-5 ">Veuillez vous connecter</h1>
                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}
                {% if app.user %}
                    <div class="mb-3">
                        Tu es connecté en tant que {{ app.user.username }}, <a href="{{ path('app_logout') }}">Se déconnecter</a>
                    </div>
                {% endif %}
                <label class="pt-4 px-1" for="inputEmail">E-mail</label>
                <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="px-1 form-control justify-content-center" required autofocus>
                <label class="pt-4 px-1 mt-3" for="inputPassword">Mot de passe</label>
                <input type="password" name="password" id="inputPassword" class="px-1 form-control" required>
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}" class="px-1">
                <div class="checkbox mb-3">
                    <label class="pt-3 px-1 mt-3">
                        <input type="checkbox" name="_remember_me">Se souvenir de moi
                    </label>
                </div>
                <div class="text-center">
                    <button class="btn btn-secondary btn mt-2" type="submit">Se connecter</button>
                </div>
            </form>
        </div>
    </div>
    <div class="text-right ">
        <a class="m-3 forgotPassword mt-5" type="submit" href="{{ path('app_forgot_password_request') }}">Mot de passe oublié ?</a>
    </div>
{% endblock %}
