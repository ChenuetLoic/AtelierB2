{% extends 'layout.html.twig' %}
{% block title %}Portfolio{% endblock %}
{% block body %}
<section class="bg-primary pb-5">
    <div class="container">
    <h1 class="titrePrestation text-center">Prestations</h1>
         {% for prestation in prestations %}
            <div>
             {{ prestation.prestation| raw }}
            </div>
         {% endfor %}
    </div>
    <div class="container-fluid">
        <div class="d-flex justify-content-around">
            {% for prestation in prestations %}
            <img class="imagePrestation m-4" src="{{ asset('uploads/picture/'~prestation.picture) }}"
                  alt="{{ prestation.picture }}" title="{{ prestation.picture }}">
            {% endfor %}
         </div>
    </div>
</section>
{% endblock %}
